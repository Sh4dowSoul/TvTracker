<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="de.schnettler.tvtracker.ui.discover.DiscoverViewModel" />
    </data>

    <de.schnettler.tvtracker.util.SwipeRefreshLayout
        android:id="@+id/discover_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:refreshing="@{viewmodel.isRefreshing}"
        app:onRefreshListener="@{() -> viewmodel.onRefresh()}">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/discover_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include
                    android:id="@+id/trending_shows_holder"
                    layout="@layout/show_recyler_with_header"
                    app:shows="@{viewmodel.trendingShows}"
                    app:title="@{@string/trending_now}"/>

                <include
                    android:id="@+id/popular"
                    layout="@layout/show_recyler_with_header"
                    app:shows="@{viewmodel.popularShows}"
                    app:title="@{@string/popular}"/>
            </LinearLayout>



        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </de.schnettler.tvtracker.util.SwipeRefreshLayout>
</layout>
