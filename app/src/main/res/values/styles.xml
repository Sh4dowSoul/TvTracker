<resources>
    <style name="AppTheme" parent="BaseAppTheme"/>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorBackgroundElevated</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="Widget.AppTheme.BottomSheet" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.LargeComponent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorBackgroundElevated</item>
        <item name="android:colorBackground">@color/colorBackgroundElevated</item>
    </style>

    <style name="ShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipStrokeColor">@color/colorStroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/colorBackground</item>
    </style>

    <style name="TextAppearance.Chip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/nunito</item>
    </style>
</resources>